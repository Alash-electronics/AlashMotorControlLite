#include "AlashMotorControlLite.h"
// DIR_PWM режимі және inA = 4, PWM = 3 пиндерімен қозғалтқыш объектісін жасаймыз
AlashMotorControlLite motor(DIR_PWM, 4, 3);
void setup() {   // Бұл функцияда инициализация жоқ, бос қалдырылған
}
void loop() {
  motor.setSpeed(50);   // Алға 50% жылдамдықпен айналу
  delay(1000);          // 1 секунд кідіріс

  motor.setSpeed(100);  // Алға толық жылдамдықпен айналу
  delay(1000);          // 1 секунд кідіріс

  motor.stop();         // Қозғалтқышты тоқтату (еркін тоқтату)
  delay(1000);          // 1 секунд кідіріс

  motor.setSpeed(-50);  // Артқа 50% жылдамдықпен айналу
  delay(1000);          // 1 секунд кідіріс

  motor.setSpeed(-100); // Артқа толық жылдамдықпен айналу
  delay(1000);          // 1 секунд кідіріс

  motor.brake();        // Қозғалтқышты тежеу
  delay(1000);          // 1 секунд кідіріс
}
